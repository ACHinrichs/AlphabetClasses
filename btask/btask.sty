\newcommand{\task}[1]{%
    \refstepcounter{task}%
    \refstepcounter{section}%
    \@startsection{aufgabe}%
        {1}%
        {\z@}%
        {\@marginBeforeTask}%
        {\@marginAfterTask}%
        {\@taskstyle}%
        *{Aufgabe \thetask\@taskseparator\ \ifstrempty{#1}{}{\textrm{\textnormal{(#1)}}}}%
    \addcontentsline{toc}{section}{Aufgabe \thetask: #1}%
}
\newcommand{\subtask}[1]{%
    \refstepcounter{subtask}%
    \refstepcounter{subsection}%
    \@startsection{aufgabe}%
      {2}%
      {\z@}%
      {\@marginBeforeSubtask}%
      {\@marginAfterSubtask}%
      {\@subtaskstyle}%
      *{Teilaufgabe \arabic{subtask}\@subtaskseparator\ \ifstrempty{#1}{}{\textrm{(#1)}}}%
    \addcontentsline{toc}{subsection}{Teilaufgabe \arabic{subtask}: #1}%
}

